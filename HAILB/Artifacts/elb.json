{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "0.0.1",
    "parameters": {
        "prefix": {
            "type": "string",
            "defaultValue": "ngf-hailb"
        },
        "elbProbePort": {
            "type": "int",
            "defaultValue": 65500
        }
    },
    "variables": {
        "apiVersionNetwork": "2017-08-01",
        "elbName": "[concat( parameters('prefix'), '-elb' )]",
        "elbPipName": "[concat( parameters('prefix'), '-LB-PIP' )]",
        "elbPoolName": "NGFPool-ext",
        "elbProbeName": "ngprobe"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('elbPipName')]",
            "apiVersion": "[variables('apiVersionNetwork')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIpAllocationMethod": "Static",
                "publicIpAddressVersion": "IPv4"
            }
        },
        {
            "type": "Microsoft.Network/loadBalancers",
            "name": "[variables('elbName')]",
            "apiVersion": "[variables('apiVersionNetwork')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "ExternalLoadBalancerVIP",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[resourceId( 'Microsoft.Network/publicIPAddresses', variables('elbPipName'))]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[variables('elbPoolName')]"
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "lbrule",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[concat( resourceId('Microsoft.Network/loadBalancers', variables('elbName')), '/frontendIpConfigurations/ExternalLoadBalancerVIP' )]"
                            },
                            "frontendPort": 0,
                            "backendPort": 0,
                            "enableFloatingIP": false,
                            "idleTimeoutInMinutes": 15,
                            "protocol": "All",
                            "loadDistribution": "Default",
                            "backendAddressPool": {
                                "id": "[concat( resourceId('Microsoft.Network/loadBalancers', variables('elbName')), '/backendAddressPools/', variables('elbPoolName'))]"
                            },
                            "probe": {
                                "id": "[concat( resourceId('Microsoft.Network/loadBalancers', variables('elbName')), '/probes/', variables('elbProbeName'))]"
                            }
                        }
                    }
                ],
                "probes": [
                    {
                        "name": "[variables('elbProbeName')]",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "protocol": "Tcp",
                            "port": "[parameters('elbProbePort')]",
                            "intervalInSeconds": 5,
                            "numberOfProbes": 2
                        }
                    }
                ],
                "inboundNatRules": [],
                "outboundNatRules": [],
                "inboundNatPools": []
            }
        }
    ]
}