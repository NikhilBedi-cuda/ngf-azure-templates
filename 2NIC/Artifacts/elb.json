{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "0.0.1",
    "parameters": {
        "prefix": {
            "type": "string",
            "defaultValue": "ngf-hailb"
        }
    },
    "variables": {
        "apiVersionNetwork": "2017-08-01",
        "elbName": "[concat( parameters('prefix'), '-elb' )]",
        "elbPipName": "[concat( parameters('prefix'), '-LB-PIP' )]",
        "elbFrontEndName": "ExternalLoadBalancerVIP",
        "elbPoolName": "NGFPool-ext",
        "elbProbeName": "ngfprobe",
        "elbProbePort": "691",
        "elbID": "[resourceId('Microsoft.Network/loadBalancers',variables('elbName'))]",
        "elbPIPID": "[resourceId('Microsoft.Network/publicIPAddresses',variables('elbPipName'))]",
        "elbFrontEndPoolID": "[concat(variables('elbID'),'/frontendIPConfigurations/',variables('elbFrontEndName'))]",
        "elbBackEndPoolID": "[concat(variables('elbID'),'/backendAddressPools/',variables('elbPoolName'))]",
        "elbProbeID": "[concat(variables('elbID'),'/probes/',variables('elbProbeName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('elbPipName')]",
            "apiVersion": "[variables('apiVersionNetwork')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIpAllocationMethod": "Static",
                "publicIpAddressVersion": "IPv4"
            }
        },
        {
            "type": "Microsoft.Network/loadBalancers",
            "name": "[variables('elbName')]",
            "apiVersion": "[variables('apiVersionNetwork')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('elbPipName'))]"
                "[concat('Microsoft.Network/virtualNetworks/', parameters('prefix'),'-vnet')]",
                "[concat('Microsoft.Network/availabilitySets/', parameters('prefix'),'-haSet')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "[variables('elbFrontEndName')]",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[variables('elbPIPID')]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[variables('elbPoolName')]"
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "IPSEC-IKE",
                        "properties": {
                            "frontendIPConfiguration": {
                              "id": "[variables('elbFrontEndPoolID')]"
                            },
                            "backendAddressPool": {
                              "id": "[variables('elbBackEndPoolID')]"
                            },
                            "protocol": "Udp",
                            "frontendPort": 500,
                            "backendPort": 500,
                            "enableFloatingIP": false,
                            "idleTimeoutInMinutes": 5,
                            "probe": {
                                "id": "[variables('elbProbeID')]"
                            }
                        }
                    },
                    {
                      "name": "IPSEC-NATT",
                      "properties": {
                          "frontendIPConfiguration": {
                              "id": "[variables('elbFrontEndPoolID')]"
                          },
                          "backendAddressPool": {
                              "id": "[variables('elbBackEndPoolID')]"
                          },
                          "protocol": "Udp",
                          "frontendPort": 4500,
                          "backendPort": 4500,
                          "enableFloatingIP": false,
                          "idleTimeoutInMinutes": 5,
                          "probe": {
                              "id": "[variables('elbProbeID')]"
                          }
                      }
                    },
                    {
                      "name": "TINA-UDP",
                      "properties": {
                          "frontendIPConfiguration": {
                              "id": "[variables('elbFrontEndPoolID')]"
                          },
                          "backendAddressPool": {
                              "id": "[variables('elbBackEndPoolID')]"
                          },
                          "protocol": "Udp",
                          "frontendPort": 691,
                          "backendPort": 691,
                          "enableFloatingIP": false,
                          "idleTimeoutInMinutes": 5,
                          "probe": {
                              "id": "[variables('elbProbeID')]"
                          }
                      }
                    },
                    {
                      "name": "TINA-TCP",
                      "properties": {
                          "frontendIPConfiguration": {
                              "id": "[variables('elbFrontEndPoolID')]"
                          },
                          "backendAddressPool": {
                              "id": "[variables('elbBackEndPoolID')]"
                          },
                          "protocol": "Tcp",
                          "frontendPort": 691,
                          "backendPort": 691,
                          "enableFloatingIP": false,
                          "idleTimeoutInMinutes": 5,
                          "probe": {
                              "id": "[variables('elbProbeID')]"
                          }
                      }
                    }
                ],
                "probes": [
                    {
                        "name": "[variables('elbProbeName')]",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "protocol": "Tcp",
                            "port": "[variables('elbProbePort')]",
                            "intervalInSeconds": 5,
                            "numberOfProbes": 2
                        }
                    }
                ],
                "inboundNatRules": [],
                "outboundNatRules": [],
                "inboundNatPools": []
            }
        }
    ]
}